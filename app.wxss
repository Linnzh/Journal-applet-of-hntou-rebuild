/* ************************************************************************** */
/* 常见样式 */
/* 1.按钮：无边框 无圆角 无默认底色 无内边距 */
button {
  border-radius: 0;
  -webkit-border-radius: 0;
  -moz-border-radius: 0;
  -ms-border-radius: 0;
  -o-border-radius: 0;
  box-sizing: border-box;
}
button::after {
  border: none;
}
.btn-none {
  padding: 0;
}
.btn-plain {
  /* 按钮：无文字 包裹图片或者字体图标时与图标同大 需要设定背景色与整体背景色相同 */
  padding: 0;
  line-height: 0;
  background-color: #ffffff;
}
.btn-tag {
  display: inline;
  background-color: #f2826a;
  color: #ffffff;
  margin-right: 10px;
  padding: 2px;
}
.btn-star {
  padding: 0;
  background-color: #ffffff;
  line-height: 0;
}
.btn-add {
  background-color: #f2826a;
  color: #ffffff;
  border-radius: 10px;
  -webkit-border-radius: 10px;
  -moz-border-radius: 10px;
  -ms-border-radius: 10px;
  -o-border-radius: 10px;
}
.btn-add-hover {
  background-color: #ff4444;
}
.btn-cancel {
  background-color: #ffffff;
  color: #4a4a4a;
  border: #4a4a4a 1px solid;
}
.btn-cancel-hover {
  background-color: #4a4a4a;
  color: #ffffff;
}

/* 3.手风琴样式 */
.collapse {
  display: block;
}
.collapse-header {
  /* 手风琴项目头 */
  border: none;
}
.collapse-body {
  /* 重点：手风琴项目的子项目主体 */
  height: 0;
  overflow: hidden;
}
.collapse-item {
  /* 手风琴项目的单项子项目 */
  /* border-bottom: #f2826a 1px solid; */
  margin-left: 5px;
  margin-bottom: 5px;
}
.collapse-selected {
  /* 手风琴项目选中时 */
  color: #f2826a;
  font-weight: bolder;
}
.collapse-unfold {
  height: auto;
}

/* 4.超大屏幕 Jumbotron */
.jumbotron {
  display: block;
  background-color: #ced4d4;
  padding-bottom: 100rpx;
  margin-bottom: 10px;
}
.jumbotron > text {
  display: block;
  padding-top: 100rpx;
  padding-bottom: 100rpx;
  text-align: center;
}
.jumbotron > button {
  display: block;
  width: 400rpx;
}

/* 文章简略信息 */
.abbr-text {
  display: inline-block;
  width: 77.7778%;
}
.abbr-img {
  display: inline-block;
  /* width: calc(22.2222% - 10px); */
  width: 22.2222%;
  overflow: hidden;
}