/**app.wxss**/

/* 1.调用外部 WXSS 文件 */
@import "/dist/common/index.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.right {
  float: right
}
.right-btn {
  width: 80pt;
}

/* ************************************************************************** */
/* 颜色样式设定 */
.c-standard {
  background-color: #ffffff;
  color: #000000;
}
.c-gray {
  /* background-color: #ffffff; */
  color: #ced4d4;
}
.c-gray-selected {
  /* background-color: #ffffff; */
  color: #4a4a4a;
}
.c-highlight {
  /* background-color: #ffffff; */
  color: #f2826a;
}
.c-highlight-selected {
  /* background-color: #ffffff; */
  color: #ff4444;
}

/* ************************************************************************** */
/* 字号样式设定 */
.f-standard {
  font-size: 13pt;
  line-height: 26px;
}
.f-small {
  font-size: 12pt;
  line-height: 24px;
}
.f-large {
  font-size: 14pt;
  line-height: 28px;
  /* background-color: #4a4a4a; */
}
.f-larger {
  font-size: 20pt;
  line-height: 40px;
}


/* ************************************************************************** */
/* Flex布局 */
.flex-container {
  display: flex;
  /* 配置flex主轴方向为：从左到右 */
  flex-direction: row;
  /* 配置容器内项目是否换行：否 */
  flex-wrap: nowrap;
  /* 容器内项目在主轴的对齐方式：左对齐 | 两端对齐 */
  /* justify-content: flex-start; */
  /* justify-content: space-between; */
  /* justify-content: space-around; */
  /* 容器内项目在交叉轴的对齐方式：顶端对齐 */
  /* align-items: flex-start; */
  box-sizing: border-box;
}
/* Flex 项目布局 */
.flex-item-expand {
  /* 项目在有余地时放大 */
  flex: 1 0 auto;
}
.flex-item-shrink {
  /* 项目在空间不足时缩小 */
  flex: 0 1 auto;
}
.flex-item-original {
  /* 项目保持原始大小：既不缩小也不放大 */
  flex: 0 0 auto;
}
.flex-item-zoom {
  /* 项目在有余地时放大，空间不足时缩小 */
  flex: 1 1 auto;
}
