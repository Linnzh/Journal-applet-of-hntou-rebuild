<!-- 4.添加评论 -->
<view class='comment'>

  <van-cell-group>
    <van-field
      value='{{ comment }}'
      type='text'
      center
      clearable
      border='{{ true }}'
      fixed='{{ true }}'
      use-icon-slot='{{ true }}'
      use-button-slot
      icon='add'
      placeholder='留下评论'
      maxlength='255'
      size='large'

      value='{{ comment }}'
      bind:change='onChange'
      bind:confirm="comment"
    >
      <van-button slot='button' size='large' type='primary' bindtap="comment">评论</van-button>
    </van-field>
  </van-cell-group>


</view>